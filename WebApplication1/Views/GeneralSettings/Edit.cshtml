@model GeneralSettings

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>General Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <form asp-action="Edit" method="post">
        <div class="container mt-4">
            <div class="card">
                <div class="card-header text-center fw-bold">General Settings</div>
                <div class="card-body">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Addition</label>
                        <div class="col-sm-10">
                            <input asp-for="OvertimeRatePerHour" type="text" class="form-control" placeholder="2 Hours">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Deduction</label>
                        <div class="col-sm-10">
                            <input asp-for="DeductionRatePerHour" type="text" class="form-control" placeholder="2 Hours">
                        </div>
                    </div>
                    <h5 class="text-center mb-3">Weekly Holidays</h5>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Official Holiday 1</label>
                        <div class="col-sm-9">
                            <select asp-for="WeeklyHolidays1" asp-items="ViewBag.SelectedDays" class="form-select">
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">Official Holiday 2</label>
                        <div class="col-sm-9">
                            <select asp-for="WeeklyHolidays2" asp-items="ViewBag.SelectedDays" class="form-select">
                            </select>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-success">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
