@model Department
@{
    ViewData["Title"] = "Create Department";
}

    <div class="container">
        <h3 class="mb-3">User Groups</h3>
        <div class="button-group">
            <button class="btn btn-secondary">Private Custom</button>
            <button class="btn btn-primary">All Permissions</button>
        </div>
    <form asp-action="Create" method="post" >
        <div class="d-flex">
            <div class="w-75">
                <label class="me-3" asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-4 ms-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>

        <table class="table table-bordered mt-3 text-center ">
            <thead class="table-light">
                <tr>
                    <th>Page</th>
                    <th>Add</th>
                    <th>Delete</th>
                    <th>Edit</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Employees</td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                </tr>
                <tr>
                    <td>General Settings</td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                </tr>
                <tr>
                    <td>Attendance & Departure</td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                </tr>
                <tr>
                    <td>Salary Report</td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                    <td><input type="checkbox"></td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>