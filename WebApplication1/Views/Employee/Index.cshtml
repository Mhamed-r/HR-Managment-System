@model List<ApplicationUser>
@{
    ViewData["Title"] = "Show Employees";
}
<a class="btn btn-outline-primary" asp-action="Create">Create Employee</a>
<table class="table table-bordered text-center mt-3">
    <thead>
        <tr>
            <td>Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>
                    <a href="/Employee/GetById/@item.Id" class="btn btn-outline-info"><i class="fa-regular fa-square-check"></i></a>
                  
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/sweetalert2/sweetalert2.all.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script>
    function areYouSure(id) {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/hr/Delete/" + id,
                    type: "DELETE", // Ensure correct HTTP method
                    success: function() {
                        Swal.fire({
                            title: "Deleted!",
                            text: "Your file has been deleted.",
                            icon: "success"
                        }).then(() => {
                            location.reload(); // Reload the page after the SweetAlert closes
                        });
                    },
                    error: function(xhr, status, error) {
                        console.error("AJAX request failed:", status, error);
                        Swal.fire({
                            title: "Error!",
                            text: "There was an error deleting your file.",
                            icon: "error"
                        });
                    }
                });
            }
        });
    }
</script>

