@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f8f9fa;
        }

        .dashboard-header {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .metric-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .metric-card:hover {
                transform: translateY(-5px);
            }

        .metric-title {
            font-size: 1rem;
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
        }

            .metric-title i {
                color: #2575fc;
                margin-right: 8px;
            }

        .metric-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
        }

        .metric-percent-plus {
            color: #28a745;
            font-weight: bold;
            margin-top: 10px;
        }

        .metric-percent-minus {
            color: #dc3545;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <div class="dashboard-header">
            <h1>Dashboard</h1>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="metric-card">
                    <div class="metric-title">
                        <i class="fa-solid fa-users"></i> Total Employees
                    </div>
                    <div class="metric-value">@ViewData["Count"]</div>
                    <div class="metric-percent-plus">+65%</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="metric-card">
                    <div class="metric-title">
                        <i class="fa-solid fa-calendar-check"></i> Number of Leaves
                    </div>
                    <div class="metric-value">@ViewData["Numberofleave"]</div>
                    <div class="metric-percent-minus">-24%</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="metric-card">
                    <div class="metric-title">
                        <i class="fa-solid fa-user-plus"></i> New Employees
                    </div>
                    <div class="metric-value">@ViewData["NewEmployeeCount"]</div>
                    <div class="metric-percent-plus">+15%</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="metric-card">
                    <div class="metric-title">
                        <i class="fa-solid fa-building-user"></i> Departments
                    </div>
                    <div class="metric-value">@ViewData["DepartmentCount"]</div>
                    <div class="metric-percent-plus">+80%</div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
